    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.14.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^9.6.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
